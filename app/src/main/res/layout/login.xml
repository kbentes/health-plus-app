<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:layout_width="327dp"
            android:layout_height="61dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:text="E-mail"
            tools:layout_editor_absoluteX="42dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <EditText
            android:layout_width="327dp"
            android:layout_height="61dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/senha"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="42dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="42dp"
            app:layout_constraintBottom_toTopOf="@+id/botaoLogin" android:text="Senha"
            android:contentDescription="Senha" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/email" android:layout_marginTop="100dp"/>
    <Button
            android:text="LOGIN"
            android:layout_width="179dp"
            android:layout_height="61dp"
            android:id="@+id/botaoLogin" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/senha" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="210dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="116dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="116dp"/>
    <ImageView
            android:layout_width="178dp"
            android:layout_height="146dp" app:srcCompat="@mipmap/logo" android:id="@+id/imageView"
            tools:layout_editor_absoluteY="118dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>